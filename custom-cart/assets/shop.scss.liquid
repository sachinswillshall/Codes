    }

    p, a {
      margin-bottom: 0;
    }

    a {
      &:hover {
        color: $colorPrimary;
        opacity: 1;
      }
    }

    .line-price {
      vertical-align: text-top;
    }
  }

  .ajaxcart__qty-num {
    border: none;
    color: $colorBodyText;
  }

  .ajaxcart__qty-adjust {
    border: none;
    color: $colorBodyText;
    padding: 0;

    &:hover {
      color: $colorPrimary;
    }
  }

  .ajaxcart__qty {
    padding: 0;

    input {
      padding: 0;
    }
  }

  .ajaxcart__footer {
    padding-top: 1em;

    hr {
      margin: 0 0 1em;

      & ~ hr {
        margin-bottom: 2em;
      }
    }
  }

  .subtotal {
    font-family: 'Campton-Bold';
    text-transform: uppercase;
  }

  .cart__checkout {
    font-family: 'Campton-Bold';
    font-weight: normal;
    background-color: $colorPrimary;
    border-radius: $border-radius;
    &:hover {
      background-color: $colorPrimaryLighten;
    }
  }
