.drawer {
  background-color: white;
  border: 1px solid $colorBorders;
  bottom: auto;
  box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.05);
  display: none;
  opacity: 0;
  overflow: visible; //allow popover arrow to overflow
  position: absolute;
  top: 150px;
  transition: display 0, opacity .25s;

  &.drawer--right {
    &::after {
      position: absolute;
      top: -($cartArrowSize / 2);
      content: '';
      width: $cartArrowSize;
      height: $cartArrowSize;
      background-color: white;
      border-top: 1px solid $colorBorders;
      border-right: 1px solid $colorBorders;
      transform: rotate(-45deg);
    }
  }

  &.condensed-menu {
    top: 115px;
  }

  .js-drawer-open & {
    transition: opacity .25s, display 0 0.25s;
  }

  &.drawer--left {
    border-left: 0;
    border-top: 0;
    bottom: 0;
    left: 0;
    overflow-y: scroll;
    padding: ($gutter / 2) 0 0 ($gutter / 2);
    position: fixed;
    top: 0;
    width: calc(100% - #{$gutter});

    .mobile-nav {
      display: flex;
      flex-direction: column;
      height: 100%;
      margin-right: 0;
      margin-top: 0;

      .mobile-nav__main {
        flex: 1 1 auto; //IE11 requires 3rd prop
        margin-top: -($gutter / 2);
      }

      header {
        align-items: center;
        border-top: $navBarBorder solid $colorPrimary;
        display: flex;
        height: $navBarHeightLight - 1px;
        padding: ($gutter - $navBarBorder) (calc(#{$gutter} + 1.4rem)) ($gutter / 2) $gutter;

        .drawer__close {
          flex: 0 0 1.4rem;
          font-size: 1.4rem;
          margin: 0;
          width: auto;
        }

        .mobile-nav__logo-wrapper {
          max-width: 100%;
          margin: 0 auto;
        }

        .mobile-nav__logo-link {
          img {
            display: block;
            width: $navLogoSize;
          }
        }
      }

      .mobile-nav__minor {
        padding: $gutter;
        border-top: 1px solid $colorBorders;

        .mobile-nav__minor--text {
          font-size: .75em;
          color: $colorBodyText;
        }

        a.mobile-nav__minor--text {
          font-family: 'Campton-SemiBold';
        }

        .mobile-nav__list--minor {
          padding-top: $gutter;
          text-align: center;

          .mobile-nav__link {
            color: $colorBodyText;
            font-family: 'Campton-Book';
            font-size: .9em;
          }
        }
      }

      .mobile-nav__list,
      .mobile-nav__list--minor,
      .mobile-nav__sublist {
        margin: 0;
      }

      .mobile-nav__list {
        border-top: 1px solid $colorBorders;
        padding: ($gutter / 2) 0;
      }

      .social-icons {
        position: absolute;
        margin: 0;
        right: $gutter / 2;
        top: calc((#{$gutter} / 2) + 8px);

        li {
          margin: 0;
        }

        a {
          color: $colorBodyText;
          font-size: 2em;
        }
      }
    }

    .js-drawer-open-left & {
      display: block;
      opacity: 1;
      transform: none;
    }

    @include at-query($min, $small) {
      width: 45%;
    }
  }

  .mobile-nav__item {
    .mobile-nav__link {
      color: $colorSecondary;
      margin: 0;
      padding: 0 $gutter .5em;

      #CartCount {
        @include count-badge;
        background-color: $colorPrimary;
        color: white;
        margin-left: .25em;
      }
    }

    [class*="icon-menu-"] {
      color: $colorBodyText;
      font-size: 2em;
      margin-left: -.3rem;
      padding-right: 1rem;

      & ~ span {
        vertical-align: text-bottom;
      }
    }

    // #ly-languages-switcher {
    //   padding-left: $gutter / 2;

    //   img {
    //     display: inline-block;
    //     padding-right: calc(1rem + 10px); //arbitrary offset required to match 1rem of icon-menu
    //   }

    //   a {
    //     font-family: 'Campton-SemiBold';
    //     padding: 1em 0 0;
    //   }
    // }

    &::after {
      border: none;
    }

    &:last-child {
      a {
        padding-bottom: 0;
      }
    }
  }

  .mobile-nav__item--active {
    font-weight: normal;

    a {
      color: $colorPrimary;
    }
  }

  &.drawer--right {
    color: $colorBodyText;
    padding: $gutter;
    right: $gutter / 2;
    width: calc(100% - #{$gutter});

    .js-drawer-open-right & {
      display: block;
      opacity: 1;
      transform: none;
    }

    &::after {
      right: 19px;
    }
    @include at-query($min, $large) {
      right: calc(50% - (100vw / 2) + #{$gutter});
      width: $drawerCartWidth;

      &::after {
        right: $gutter;
      }
    }

    @include at-query($min, $xl) {
      right: calc(50% - (#{$siteWidth} / 2) + #{$gutter});
      width: $drawerCartWidth;

      &::after {
        right: $gutter;
      }
    }
  }

  #CartContainer > p:only-child {
    // signifies the "no items" message
    // leave space to counter the negative position of "Continue shopping"
    margin-bottom: 3em
  }

  .drawer__close {
    color: $colorPrimary;
    display: inline-block;
    font-size: inherit;
    margin-top: 1em;
    text-align: right;
    width: 50%;

    &:hover {
      font-family: 'Campton-SemiBold';
      opacity: 1;
    }
  }

  .ajaxcart__inner {
    margin-bottom: 0;
  }

  .ajaxcart__product {
    .ajaxcart__product-image {
