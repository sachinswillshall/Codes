$postSmall: $small + $viewportIncrement;
$preMedium: $medium - $viewportIncrement;
$preLarge: $large - $viewportIncrement;

$min: min-width;
$max: max-width;
@mixin at-query ($constraint_,$viewport1_, $viewport2_:null) {
 $constraint: $constraint_; $viewport1: $viewport1_; $viewport2: $viewport2_;
  @if type-of($constraint_) == number {
    $viewport1 : $constraint_; $viewport2 : $viewport1_; $constraint : null;
  }
  @if $constraint == $min {
    @media screen and ($min: $viewport1) {
      @content;
    }
  } @else if $constraint == $max {
    @media screen and ($max: $viewport1) {
      @content;
    }
  } @else {
    @media screen and ($min: $viewport1) and ($max: $viewport2) {
      @content;
    }
  }
}

@mixin count-badge {
  border-radius: $countBadgeSize / 2;
  display: inline-block;
  font-family: 'Campton-Book';
  font-size: .9rem;
  height: $countBadgeSize;
  line-height: $countBadgeSize;
  padding: 2px 0 0;
  text-align: center;
  width: $countBadgeSize;
}

//begin ui-datepicker css
.ui-datepicker {
  border: none ;
  padding: 0 !important;
  width: 100% !important;

  .ui-datepicker-header {
    background: transparent !important;
    border: none !important;

    .ui-datepicker-title {
      font-family: 'Campton-Bold';
      font-weight: normal;
      color: $colorBodyText;
      text-transform: uppercase;
    }

    .ui-datepicker-prev,
    .ui-datepicker-next,
    .ui-datepicker-prev-hover,
    .ui-datepicker-next-hover {
      width: auto;
      height: auto;
      border: none;
      background: none;
      cursor: pointer;
      top: 2px;
      padding: 0 2px;
    }

    .ui-datepicker-prev,
    .ui-datepicker-prev-hover {
      left: 10px;
    }

    .ui-datepicker-next,
    .ui-datepicker-next-hover {
      right: 10px;
    }

    .ui-datepicker-prev-hover,
    .ui-datepicker-next-hover {
      border-radius: 1em;
      background-color: $colorFooterBg;
    }

    .ui-icon {
      display: none;
    }
  }

  th {
    font-family: 'Campton-Book';
    font-weight: normal;
    color: $colorBodyText;
  }

  td {
    min-width: 3em;
    padding: 0 0.4em !important;
  }

  .ui-state-default {
    border: none !important;
    background: none !important;
    font-family: 'Campton-Book';
    color: $colorDark !important;
    background: none;
    text-align: center;
    border-radius: 2em;
    padding: 0.35em 0 0.25em !important;
    &:not(span) {
      &:hover {
        background-color: $colorFooterBg !important;
      }
    }

    @include at-query($min, $large) {
      padding: 0.5em 0 0.4em !important;
    }
  }

  .ui-state-active {
    font-family: 'Campton-Bold';
    background-color: $colorPrimary !important;
    color: white !important;
  }

  .ui-datepicker-other-month {
    visibility: hidden; //Chrome does very strange things without this
  }
}

//for iOS the datepicker modal must be at the top of the dom
.datepicker--wrapper {
  display: none;
  @include at-query($max, $medium) {
    align-items: center;
    background-color: rgba($colorSecondary, .5);
    bottom: 0;
    display: flex;
    float: none;
    justify-content: center;
    padding: 0;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 1;
  }
}

