//begin variant-detail
//initially descendent of template-product though needs to be moved to top of DOM when active
.variant-detail--modal {
  align-items: center;
  background-color: rgba($colorSecondary, .5);
  display: flex;
  height: 100vh;
  justify-content: center;
  position: fixed;
  width: 100vw;
  z-index: 1;

  &.hide {
    display: none;
  }

  .wrapper {
    position: relative;
    width: 100%;
  }

  .variant-detail--content {
    background-color: white;
    border: 1px solid $colorBorders;
    border-radius: $border-radius;
    max-height: calc(100vh - (#{$gutter} * 2));
    overflow-y: auto;
    position: relative;
    width: 100%;

    .add-to-cart__button--main {
      margin-bottom: 0;
    }
  }

  .variant-detail--image {
    display: block;
    width: 100%;
  }

  .variant-detail--text {
    padding: $gutter;

    @include at-query($min, $medium) {
      padding: ($gutter * 2);
      padding-bottom: $gutter;
    }
  }

  .variant-detail--close {
    font-size: 1.5rem;
    position: absolute;
    right: $gutter / 2;
    top: $gutter / 2;

    &:hover {
      color: $colorSecondary;
    }

    @include at-query($min, $medium) {
      right: $gutter;
      top: $gutter;
    }
  }

  .variant-detail--button {
    bottom: 0;
    color: $colorBodyText;
    font-size: 4rem;
    position: absolute;
    top: 0;

    &.previous {
      left: -$gutter;
    }

    &.next {
      right: -$gutter;
    }

    &:hover {
      color: $colorSecondary;
    }

    @include at-query($min, $xl) {
      &.previous {
        left: -($gutter * 2);
      }

      &.next {
        right: -($gutter * 2);
      }
    }
  }
}

