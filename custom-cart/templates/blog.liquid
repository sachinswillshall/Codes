
<!-- /templates/blog.liquid -->
{% layout 'theme-condensed' %}
{% comment %}

  Loop through a defined number of articles with the 'paginate' tag.
  Don't forget to close the tag after your loop.

{% endcomment %}

{% paginate blog.articles by 5 %}

{% comment %}
  This template is also used for listing out articles of a specific tag.
  You can change layouts or styles by checking if current_tags is true.
{% endcomment %}
<div class="grid--rev">

  <div class="grid__item large--one-whole">

    <section class="section-header text-center">
      {% if current_tags %}
        <h1>{{ blog.title | link_to: blog.url}} &mdash; {{ current_tags.first }}</h1>
      {% else %}
        <h1>{{ blog.title}}</h1>
      {% endif %}
      {% assign blog_description = blog.metafields.global.description_tag %}
      {% if blog_description %}
        <p>{{blog_description}}</p>
      {% endif %}
    </section>

    {% comment %}
      Loop through each article in your blog. This is limited to what you set for pagination above.

      For more info on article liquid tags:
        - http://docs.shopify.com/themes/liquid-variables/article
    {% endcomment %}

    <div class="grid-uniform">
      {% for article in blog.articles %}

        {% comment %}
          First article is displayed at double width
        {% endcomment %}
        {% if blog.articles.first.handle == article.handle %}
          <div class="article grid__item one-whole large--two-thirds{% if blog.articles.size == 1 %}  push--large--one-sixth{% endif %}">
        {% else %}
          <div class="article grid__item one-whole large--one-third">
        {% endif %}
          <a href="{{ article.url }}">
            {% if article.image %}
              <div class="article__featured-image">
                {{ article | img_url: '1024x1024' | img_tag: article.title}}
                <div class="article__featured-image--hover">
                  <span>{{ 'blogs.article.read_article' | t }}</span>
                </div>
              </div>
            {% endif %}
            <div class="article__information">
              <div class="h4">{{ article.tags.first }}</div>
              <h2 class="h3">{{ article.title}}</h2>

              {% comment %}
                Add a surrounding div with class 'rte' to anything that will come from the rich text editor.
                Since this is just a listing page, you can either use the excerpt or truncate the full article.
              {% endcomment %}
              {% if article.excerpt.size > 0 %}
                {% assign article_text = article.excerpt %}
              {% else %}
                {% capture article_text %}{{ article.content | strip_html | truncatewords: 40}}{% endcapture %}
              {% endif %}
              <div class="rte">
                {{ article_text }} <span class="article__more">{{ 'blogs.article.read_more' | t }}</span>
              </div>
            </div>
          </a>
        </div>

      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <hr>
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}

  </div>

</div>

{% endpaginate %}
