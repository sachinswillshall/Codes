
<!-- /templates/list-collections.liquid -->
{% layout 'theme-condensed' %}
{% comment %}

  This page represents the /collections and /products pages.
  It is an optional, but highly recommended, template for your theme.

  More info:
    - http://docs.shopify.com/manual/configuration/store-customization/taking-control-of-collections-listing

{% endcomment %}

{% assign frontpage_handle = collections.frontpage.handle %}

{% comment %}
  Loop through each collection in the all-collections menu
{% endcomment %}

<div class="grid--full tab-nav--container">
  <div class="grid__item one-whole">
    <ul class="tab-nav medium-down--hide">
      {% for link in linklists.all-collections.links %}
        {% assign collection = link.object %}
        <li class="tab-nav__link{% if collection.handle == frontpage_handle %} filter--active{% endif %}">
          <a href="{{ collection.url }}">{{ collection.title | escape}}</a>
        </li>
      {% endfor %}
    </ul>

    <div class="tab-nav--mobile large--hide">
      {% for link in linklists.all-collections.links %}
        {% assign collection = link.object %}
        {% if collection.handle == frontpage_handle %}
          <button data-tab-nav--toggle class="tab-nav--toggle">{{ collection.title | escape }}</button>
          {% break %}
        {% endif %}
      {% endfor %}

      <ul class="tab-nav">
        {% for link in linklists.all-collections.links %}
          {% assign collection = link.object %}
          <li class="tab-nav__link{% if collection.handle == frontpage_handle %} filter--active{% endif %}">
            <a href="{{ collection.url }}">{{ collection.title | escape}}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% include 'frontpage-collection' %}

{% include 'tab-nav-js' %}
